{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "ng build --configuration production && sed -i \"s/%NEXT_PUBLIC_API_KEY%/$NEXT_PUBLIC_API_KEY/g\" dist/fashion-virtual-try-on/index.html",
        "outputDirectory": "dist/fashion-virtual-try-on"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 